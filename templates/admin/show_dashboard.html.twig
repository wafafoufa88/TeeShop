{% extends 'base.html.twig' %}

{% block title %}Admin - Tableau de bord | Teeshop{% endblock %}

{% block body %}

    <h1 class="text-center mt-4">Tableau de bord</h1>

    <div class="row">
        <div class="col-11 mx-auto my-4">
            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Produits</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Membres</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="pills-contact-tab" data-bs-toggle="pill" data-bs-target="#pills-contact" type="button" role="tab" aria-controls="pills-contact" aria-selected="false">Commandes</button>
                </li>

                <li class="nav-item ms-auto" role="presentation">
                    <a class="btn btn-success" href="{{ path('create_product') }}"><i class="bi bi-plus-circle"></i> Ajouter un produit</a>
                </li>
            </ul>
            <div class="tab-content" id="pills-tabContent">
                {# ///////////////////////////////////////////////// TABLE PRODUITS ///////////////////////////////////////////////// #}
                <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">

                    <table class="table">
                        <thead>
                            <tr class="text-center">
                                <th>#</th>
                                <th>Titre</th>
                                <th>Description</th>
                                <th>Couleur</th>
                                <th>Taille</th>
                                <th>Collection</th>
                                <th>Prix</th>
                                <th>Stock</th>
                                <th>Créé le</th>
                                <th>Modifié le</th>
                                <th>Actions</th>
                                <th>Photo</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for product in products %}
                        
                        <tr class="text-center align-middle">
                            <td>{{ product.id }}</td>
                            <td>{{ product.title | capitalize }}</td>{# capitalize pour mettre la premiere lettre en majuscule#}
                            <td>{{ product.descript | length > 25 ? product.descript | slice(0, 25) ~ '...' : product.descript }}</td>{#pour limiter la longeur de description#}
                            <td>{{ product.color }}</td>
                            <td>{{ product.size | upper}}</td>{#tout en majuscule#}
                            <td>{{ product.collection | capitalize }}</td>
                            <td><img src="{{ asset('uploads/' ~ product.photo ) }}" alt="{{ product.title }}" width="150" height="150" class="img-custom"></td>
                            <td>{{ product.price }} €</td>
                            <td>{{ product.stock }}</td>
                            <td>{{ product.createdAt | date('d/m/y') }}</td>
                            <td>{{ product.updatedAt | date('d/m/y')}}</td>
                            <td>
                                <a href="{{ path('update_product',{'id': product.id}) }}" class="btn btn-sm btn-info"><i class="bi bi-pencil-square"></i></a>
                                <a href="{{ path('soft_delete_product',{'id': product.id}) }}" class="btn btn-sm btn-danger" title="Archiver le produit" onclick="return confirm('Cette action archivera le produit. Voulez-vous continuer ?')"><i class="bi bi-trash3"></i></a>

                            </td>
                        
                        </tr>
                            
                            
                            {% endfor %}
                        </tbody>
                    </table>

                </div>
                {# ///////////////////////////////////////////////// TABLE PRODUITS ///////////////////////////////////////////////// #}

                {# ///////////////////////////////////////////////// TABLE MEMBRES ///////////////////////////////////////////////// #}
                <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">Users</div>
                {# ///////////////////////////////////////////////// TABLE MEMBRES ///////////////////////////////////////////////// #}

                {# ///////////////////////////////////////////////// TABLE COMMANDES ///////////////////////////////////////////////// #}
                <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">Commandes</div>
                {# ///////////////////////////////////////////////// TABLE COMMANDES ///////////////////////////////////////////////// #}

            </div>
        </div>
    </div>

{% endblock %}